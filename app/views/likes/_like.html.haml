- if user_signed_in?
  -if current_user.already_liked?(@post)
    %p
      = link_to "お気に入り解除 : #{post.likes.count}", post_like_path([post], id: post.id), method: :delete, remote: true
  - else
    %p
      = link_to "お気に入り登録 : #{post.likes.count}", post_likes_path([post], id: post.id), method: :post, remote: true
- else
  %p
    %span お気に入り数:
    = post.likes.count
