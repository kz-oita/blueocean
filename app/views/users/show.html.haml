= render 'layouts/header'
.contents-title
  = "#{@user.name}のマイページ"
.mypage-items
  プロフィール編集
.profile-items

.contents-wrap
  .posts-wrap
    - @posts.each do |post|
      .posts-wrap__lists
        .post
          .post__title
            = link_to post.title, post_path(post.id)
          .post__image
            = image_tag post.image.url if post.image?
            
= paginate(@posts)

.footer