= render 'layouts/header'
.contents-title
  = "#{@user.name}のマイページ"

- unless current_user?(@user)
  #follow_form
    - if current_user.following?(@user)
      = render 'relationships/unfollow', user: @user
    - else
      = render 'relationships/follow', user: @user


.profile
  .profile__left
    .profile__left__pic
      - if @user.image.url.present?
        = image_tag @user.image.url
  .profile__right
    .profile__right__content
      = "Diver Lank : #{@user.diver_lank}"
    .profile__right__content
      = "Dive Number : #{@user.dive_number}本"
    .profile__right__content
      %p 自己紹介
      = @user.text
.userinfo
  .userinfo__post-num
    %p 投稿数
    %p.userinfo__number
      = @user.posts.count
  .userinfo__follow-num
    %p フォロー数
    %p.userinfo__number
      = link_to @user.followings.count, following_user_path(@user)
  .userinfo__follower-num
    %p フォロワー数
    %p#userinfo__number
      = link_to @user.followers.count, followers_user_path(@user)

.contents-wrap
  .posts-wrap
    - @posts.each do |post|
      .posts-wrap__lists
        .post
          .post__title
            = link_to post.title, post_path(post.id)
          .post__image
            = image_tag post.image.to_s
            
= paginate(@posts)

.footer