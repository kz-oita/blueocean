.header
  .header__title
    = link_to "Blue Ocean", root_path, class: "header__title--text"
  .header__center
    = form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form|
      = form.text_field :keyword, class: "search-input", placeholder: "キーワード検索"
      = form.submit"検索", class: "search-btn" do
        = icon('fas', 'search', class: "icon-search")


  .header__right
    -if user_signed_in?
    -else
      = link_to "新規登録", new_user_registration_path, class: "header__right--btn"
      = link_to "ログイン", new_user_session_path, class: "header__right--btn"