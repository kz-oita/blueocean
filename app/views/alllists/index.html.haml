= render 'layouts/header'
.alllist-page
  .contents-wrap
    %ul.contents-wrap__title
      %li
        %a#users.menu_item.active{:href => "#"} Users
      %li
        %a#posts.menu_item{:href => "#"} Posts
      %li
        %a#tags.menu_item{:href => "#"} Tags
    %ul.contents
      %li.content.show
        .users-wrap
          - @users.each do |user|
            = render partial: "posts/user", locals: { user: user }
      %li.content
        .posts-wrap
          - @post.each do |post|
            = render partial: "posts/post", locals: { post: post }
      %li.content
        .tags-wrap
          - @tag.each do |tag|
            -# = link_to "##{tag.name}", "#", class: "tag-name"
            = link_to "##{tag.name}", tag_path(tag.name), class: "tag-name"
= render 'layouts/footer'
