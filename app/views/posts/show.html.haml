= render 'layouts/header'
= render 'layouts/main_menu'
.contents-title
  = @post.title
  - if user_signed_in? && current_user.id == @post.user_id
    .postManage
      = link_to "編集", edit_post_path(@post.id), class: "postManage__edit"
      = link_to "削除", post_path(@post.id), method: :delete, class: "postManage__delete"

.post-contents
  .post-contents__text
    = simple_format @post.text
  .post-contents__image
    = image_tag @post.image.url if @post.image?
  .post-contents__tags
    - @post.tag_list.each do |tag|
      = link_to tag,tag_path(tag), class: "tag-name"
  .favorite-num
    %p いいね数：
    = @post.likes.count
    - if current_user.already_liked?(@post)
      = button_to 'いいね済', post_like_path(@post), method: :delete
    - else
      = button_to 'いいね', post_likes_path(@post)
  .comments-wrap
    .comment-form
      -if current_user
        = form_with(model: [@post, @comment], local: true) do |form|
          = form.text_area :text, placeholder: "コメントする", class: 'comment-form__text', rows: "5"
          = form.submit "SEND", class: 'form__btn'
      - else
        %p ※※※ コメントの投稿には新規登録/ログインが必要です ※※※
    .comment-lists
      %h4 ＜コメント一覧＞
      - if @comments
        -@comments.each do |comment|
          .comment
            %p
            = comment.text
            .comment__name
              %p name:
              = comment.user.name

